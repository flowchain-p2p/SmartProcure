						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Operations Department\",\n    \"description\": \"Handles day-to-day operations\",\n    \"manager\": \"{{userId}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/tenants/{{tenantSlug}}/departments",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"tenants",
								"{{tenantSlug}}",
								"departments"
