			"item": [
				{
					"name": "Get All Departments",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "x-auth-token",
								"value": "{{authToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/tenants/{{tenantSlug}}/departments",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"tenants",
								"{{tenantSlug}}",
								"departments"
							]
						},
						"description": "Get all departments for a tenant"
					}
				},
				{
					"name": "Get Single Department",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "x-auth-token",
