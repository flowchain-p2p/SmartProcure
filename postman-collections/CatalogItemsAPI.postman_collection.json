{
  "info": {
    "name": "Catalog Items API",
    "description": "Postman collection for Catalog Items API routes",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Catalog Items",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer <your-token>",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/catalog-items",
          "host": ["{{baseUrl}}"],
          "path": ["catalog-items"]
        }
      }
    },
    {
      "name": "Get Single Catalog Item",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer <your-token>",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/catalog-items/:id",
          "host": ["{{baseUrl}}"],
          "path": ["catalog-items", ":id"]
        }
      }
    },
    {
      "name": "Create Catalog Item",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer <your-token>",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Sample Item\",\n  \"price\": 100\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/catalog-items",
          "host": ["{{baseUrl}}"],
          "path": ["catalog-items"]
        }
      }
    },
    {
      "name": "Update Catalog Item",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer <your-token>",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Item\",\n  \"price\": 150\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/catalog-items/:id",
          "host": ["{{baseUrl}}"],
          "path": ["catalog-items", ":id"]
        }
      }
    },
    {
      "name": "Delete Catalog Item",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer <your-token>",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/catalog-items/:id",
          "host": ["{{baseUrl}}"],
          "path": ["catalog-items", ":id"]
        }
      }
    }
  ]
}
