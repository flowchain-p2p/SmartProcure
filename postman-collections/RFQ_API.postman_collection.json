	"item": [
		{
			"name": "RFQs",
			"item": [
				{
					"name": "Get All RFQs",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/rfqs?status=Draft&page=1&limit=10",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"rfqs"
							],
							"query": [
								{
									"key": "status",
									"value": "Draft",
									"description": "Filter by status (Draft, Issued, Delivered, Completed, Cancelled)"
